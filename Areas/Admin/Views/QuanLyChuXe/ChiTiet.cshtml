@model DoAnChuyenNganh.Models.ChuXe
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<script>
    //script cho text editor tinymce
    tinymce.init({
        selector: '#mytextarea',

        height: 300,
        plugins: [
            'advlist autolink link image lists charmap print preview hr anchor pagebreak',
            'searchreplace wordcount visualblocks visualchars code fullscreen insertdatetime media nonbreaking',
            'table emoticons template paste help'
        ],
        toolbar: 'undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | ' +
            'bullist numlist outdent indent | link image | print preview media fullpage | ' +
            'forecolor backcolor emoticons | help',
        menu: {
            favs: { title: 'My Favorites', items: 'code visualaid | searchreplace | emoticons' }
        },
        menubar: 'favs file edit view insert format tools table help',
        content_css: 'css/content.css'
    });
</script>

<script>
    //script cho datepicker
    $(function () {
        $("#datepicker").datepicker({
            dateFormat: "yy/mm/dd"
        });

    });
</script>


<div class="card flex-md-fill">
    <div class="card-body">
        <h4>@Html.ActionLink("Chi tiết chủ xe", "QuanLyChuXe") ></h4>
        <h4 class="card-title">Phê duyệt</h4>
        <hr />
        @using (Html.BeginForm("ChiTiet", "QuanLyChuXe", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("MaChuXe", Model.MaChuXe)
        <div class="form-group row">
            <i class="fas fa-box fa-lg ml-3 col-form-label" style="color: rgba(71, 108, 218); height: 2em;width: 1em;"></i>
            @Html.LabelFor(model => model.TenChuXe, htmlAttributes: new { @class = "col-form-label font-weight-bold col-sm-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.TenChuXe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenChuXe, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <i class="fas fa-box fa-lg ml-3 col-form-label" style="color: rgba(71, 108, 218); height: 2em;width: 1em;"></i>
            @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @class = "col-form-label font-weight-bold col-sm-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <i class="fas fa-box fa-lg ml-3 col-form-label" style="color: rgba(71, 108, 218); height: 2em;width: 1em;"></i>
            @Html.LabelFor(model => model.TenXe, htmlAttributes: new { @class = "col-form-label font-weight-bold col-sm-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.TenXe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenXe, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <i class="fas fa-box fa-lg ml-3 col-form-label" style="color: rgba(71, 108, 218); height: 2em;width: 1em;"></i>
            @Html.LabelFor(model => model.MaLoaiXe, htmlAttributes: new { @class = "col-form-label font-weight-bold col-sm-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.MaLoaiXe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaLoaiXe, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <i class="fas fa-box fa-lg ml-3 col-form-label" style="color: rgba(71, 108, 218); height: 2em;width: 1em;"></i>
            @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "col-form-label font-weight-bold col-sm-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                <input type="submit" value="Phê duyệt" class="btn btn-sm btn-primary font-weight-bold w-25" />
                @Html.ActionLink("Từ chối", "QuanLyChuXe", null, htmlAttributes: new { @class = "btn btn-sm btn-secondary font-weight-bold w-25" })
            </div>
        </div>
    </div>
        }
    </div>
</div>




