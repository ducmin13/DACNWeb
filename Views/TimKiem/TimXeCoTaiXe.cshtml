
@{
    ViewBag.Title = "TimXeCoTaiXe";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-9 ftco-animate">
                <section class="ftco-section bg-light">
                    <div class="container">
                        <div class="row">
                            @foreach (var item in Model)
                            {

                                <div class="col-md-6">
                                    <div class="car-wrap rounded ftco-animate">
                                        <div class="img rounded d-flex align-items-end" style="background-image: url(/Assets/images/xe/@item.HinhAnh);">
                                        </div>
                                        <div class="text">
                                            <h2 class="mb-0"><a href="@Url.Action("ChiTietXe","Xe", new { id = item.MaXe})">@item.TenXe</a></h2>
                                            <div class="d-flex mb-3">
                                                <span class="cat">
                                                    <span class="ion-ios-star"></span>
                                                    <span class="ion-ios-star"></span>
                                                    <span class="ion-ios-star"></span>
                                                    <span class="ion-ios-star"></span>
                                                    <span class="ion-ios-star"></span>
                                                </span>
                                                <p class="price ml-auto">@item.Gia.Value.ToString("#,##0").Replace(',', '.') VNĐ <span>/ngày</span></p>
                                            </div>
                                            <p class="d-flex mb-0 d-block"><a href="#" class="btn btn-primary py-2 mr-1">Đặt xe</a> <a href="car-single.html" class="btn btn-secondary py-2 ml-1">Chi tiết</a></p>
                                        </div>
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
