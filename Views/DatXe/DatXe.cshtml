@using DoAnChuyenNganh.Models
@model List<GioHang>

@{
    ViewBag.Title = "DatXe";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/Assets/images/nen2.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="@Url.Action("Index","Home")">Trang chủ <i class="ion-ios-arrow-forward"></i></a></span> <span>Bài viết <i class="ion-ios-arrow-forward"></i></span></p>

            </div>
        </div>
    </div>
</section>
<div class="container flex-md-fill">
    <h3 style="text-align:center;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Chi tiết đặt xe</h3>
    <div class="row ">
        <div class="col-md-8 container">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width:20px">ID</th>
                        <th style="width:100px">Hình Ảnh</th>
                        <th>Tên xe</th>
                        <th>Số Ngày</th>
                        <th>Giá trên ngày</th>
                        <th>Thành tiền</th>
                        <td width="100px"></td>
                        <td width="100px"></td>
                        <td width="100px"></td>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tbody>
                        <tr>
                            <td>@item.iMaXe</td>
                            <td><img style="height:250px; width:250px" src="~/Assets/images/xe/@item.iHinhAnh" /></td>
                            <td>@item.iTenXe</td>
                            @using (Html.BeginForm("CapnhatGiohang", "DatXe", new { @iMaXe = item.iMaXe }))
                            {
                                <td><input name="txtSoluong" value="@item.iSL" min="0" step="1" type="number" class="form-control" style="width:100px" /></td>
                                <td>@String.Format("{0:0,0}", item.iGia) VND </td>
                                <td>@String.Format("{0:0,0}", item.iTHANHTIEN) VND</td>                             
                                <td><input type="submit" value="Cập nhật" /></td>
                            }
                        </tr>

                    </tbody>
                }
                    <tr style="font-weight:bold; text-align:right;color:red">
                        <td colspan="4">Số lượng: @ViewBag.Tongsoluong</td>
                        
                        <td colspan="5"> Tổng tiền :@String.Format("{0:0,0}", ViewBag.Tongtien)  VNĐ</td>
                    </tr>
                    <tr style="font-weight:bold; color:black; text-align:right">
                        <td colspan="9">
                            @Html.ActionLink("Xóa Tất Cả", "XoaTatCa")
                        </td>
                    </tr>
                    <tr style="font-weight:bold; color:black; text-align:center">
                        <td colspan="9">
                            @Html.ActionLink("ĐẶT XE", "DatHang")
                        </td>
                    </tr>

                </table>
            </div>
        </div>
    </div>

